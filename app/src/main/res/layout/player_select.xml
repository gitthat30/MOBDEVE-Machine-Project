<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="95dp"
        android:layout_weight="0"
        android:background="@drawable/round_layout"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="62dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="0"
            android:background="#007A1818"
            android:src="@drawable/player1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:text="Player 1"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="95dp"
        android:layout_weight="0"
        android:background="@drawable/round_layout"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="394dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="0"
            android:background="#007A1818"
            android:src="@drawable/player4" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:text="Player 4"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="95dp"
        android:background="@drawable/round_layout"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="284dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="0"
            android:background="#007A1818"
            android:src="@drawable/player3" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:text="Player 3"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="95dp"
        android:layout_weight="0"
        android:background="@drawable/round_layout"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="172dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="0"
            android:background="#007A1818"
            android:src="@drawable/player2" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:text="Player 2"
            android:textColor="#000000" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/new_player"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="507dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:background="@drawable/start_layout"
        android:fontFamily="@font/rowdies"
        android:text="Start"
        android:textColor="#8B2E8F"
        android:textSize="22.82dp"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="573dp" />

</androidx.constraintlayout.widget.ConstraintLayout>