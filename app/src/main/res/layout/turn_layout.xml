<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/round_layout"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/currentTurn_img"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_weight="0"
            android:src="@drawable/survivor1" />

        <TextView
            android:id="@+id/currentTurn_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:text="current player name"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/round_layout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRollDice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playerTurnRecycler"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRollDice"
        android:layout_width="0dp"
        android:layout_height="126.24dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/round_layout"
        android:fontFamily="@font/rowdies"
        android:text="Roll Dice"
        android:textColor="#8B2E8F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEnterHouse"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/action_layout"
        android:fontFamily="@font/rowdies"
        android:text="Enter House"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRollDice" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRandomEvent"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/action_layout"
        android:fontFamily="@font/rowdies"
        android:text="Random Event"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEnterHouse" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEndTurn"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/end_layout"
        android:fontFamily="@font/rowdies"
        android:text="End Turn"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRandomEvent" />

    <ImageView
        android:id="@+id/imgDice1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:elevation="5dp"
        android:src="@drawable/dicestatic"
        app:layout_constraintBottom_toBottomOf="@+id/btnRollDice"
        app:layout_constraintStart_toStartOf="@+id/btnRollDice"
        app:layout_constraintTop_toTopOf="@+id/btnRollDice" />

    <ImageView
        android:id="@+id/imgDice2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:elevation="5dp"
        android:src="@drawable/dicestatic"
        app:layout_constraintBottom_toBottomOf="@+id/btnRollDice"
        app:layout_constraintEnd_toEndOf="@+id/btnRollDice"
        app:layout_constraintTop_toTopOf="@+id/btnRollDice" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEscape"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/escape_layout"
        android:fontFamily="@font/rowdies"
        android:text="ESCAPE"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEndTurn" />

</androidx.constraintlayout.widget.ConstraintLayout>